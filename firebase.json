{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      }
    ],
    "storage": {
      "rules": "storage.rules"
    },
    "functions": {
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build",
        "yarn --prefix \"$RESOURCE_DIR\" build"
      ],
      "source": "functions"
    },
    "database": {
      "rules": "database.rules.json"
    }
  }
}